<h1>Select Food</h1>

<div class="row">
  <div class="col-md-6">
    <%= form_for(@booking) do |f| %>
      <% if @booking.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

          <ul>
          <% @booking.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      
      
      <div class="form-group">
        <%= f.label :select_meal %><br/>
        <%= f.collection_select :food_ids, Food.all, :id, :name, {}, {multiple: true, class: 'chosen-select'} %>
      </div>
     
      
      <div class="actions">
        <%= f.submit "Done", class: "btn btn-primary" %> or <%= link_to "Back", :back %>
      </div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $(".chosen-select").chosen({max_selected_options: 3});
  jQuery(document).ready(function(){
  jQuery(".chosen").chosen();
});
</script>
